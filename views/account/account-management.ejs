<% if (title) { %>
  <h1 class="form-title"><%= title %></h1>
<% } else { res.redirect('/') } %>

<!-- messages -->
<%- messages() %>

<!-- display error -->
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<div class="account-management-wrapper">
  <% let account = locals.accountData %>
  <% if (locals.loggedin) { %>
    <h2>Welcome <%= locals.accountData.account_firstname %></h2>
    <p>You're logged in.</p>
    <div class="management-links">
      <a href="/account/edit/<%= locals.accountData.account_id %>">Manage Account Information</a>
    </div>
    <% if (account.account_type == "Employee" || account.account_type == "Admin") { %>
      <h3>Inventory Management</h3>
      <div class="management-links">
        <a href="/inv/">Manage inventory</a>
      </div>
    <% } %>
  <% } %>
</div>
